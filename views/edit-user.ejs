<% extend('layout/masterChat') %>

<section class="content">
    <div class="block-header">
        <div class="row">
            <div class="col-lg-7 col-md-6 col-sm-12">
                <h2>Edit User
                </h2>
            </div>
            <div class="col-lg-5 col-md-6 col-sm-12">
                <ul class="breadcrumb float-md-right">
                    <li class="breadcrumb-item"><a href="index-2.html"><i class="zmdi zmdi-home"></i> App Chat</a></li>
                    <li class="breadcrumb-item active">Edit User</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <!-- Basic Validation -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="header text-center divAvatarUser">
                        <img class="changeAvatarUser styleAvatarEditUser" src="assets/images/<%= user.avatar %>" width="150" height="150" alt="">
                        <p><%= user.avatar %></p>
                        
                    </div>
                    <div class="body">
                        <form id="form_validation" method="POST" action="/update-user">
                            <div class="form-group form-float" style="display: none;">
                                <input type="file" class="form-control" name="avatar" id="avatarUser" required>
                            </div>
                            <div class="form-group form-float">
                                <label style="margin-left: 10px;font-size: 12px;" for="Email">Email</label>
                                <% if(user.type == "1"){ %>
                                <input type="email" class="form-control" readonly value="<%= user.local.email %>" placeholder="Email" name="email" required>
                                <% } else if(user.type == "2"){ %>
                                    <input type="email" class="form-control" disabled value="<%= user.facebook.email %>" placeholder="Email" name="email" required>
                                <% } else  { %>
                                    <input type="email" class="form-control" disabled value="<%= user.google.email %>" placeholder="Email" name="email" required>
                                <% } %>
                            </div>
                            <div class="form-group form-float">
                                <label style="margin-left: 10px;font-size: 12px;" for="username">UserName</label>
                                <input type="text" class="form-control" value="<%= user.username %>" placeholder="Name" name="name" required>
                            </div>
                            <div class="form-group form-float">
                                <label style="margin-left: 10px;font-size: 12px;" for="Address">Address</label>
                                <input type="text" class="form-control" value="<%= user.address %>" placeholder="Address" name="address" required>
                            </div>
                            <div class="form-group form-float">
                                    <label style="margin-left: 10px;font-size: 12px;" for="Phone">Phone</label>
                                    <input type="text" class="form-control" value="<%= user.phone %>" placeholder="Phone" name="phone" required>
                                </div>
                            <div class="form-group">
                                <div class="radio inlineblock m-r-20">
                                    <input type="radio" name="gender" <% if(user.gender == "male"){ %> checked <% } %>  id="male" class="with-gap" value="male" required>
                                    <label for="male">Male</label>
                                </div>                                
                                <div class="radio inlineblock">
                                    <input type="radio" name="gender" <% if(user.gender == "female"){ %> checked <% } %> id="Female" class="with-gap" value="female" required>
                                    <label for="Female">Female</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <input id="checkbox" type="checkbox">
                                    <label for="checkbox">I have read and accept the terms</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <div>
                                    <a href=""><i class="zmdi zmdi-long-arrow-right"></i>&nbsp; Change Password ???</a>
                                </div>
                            </div>
                            <button class="btn btn-raised btn-primary btn-round waves-effect" type="submit">SUBMIT</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    
    </div>
</section>